@phdthesis{mcmurrayDistantTiesGermany1999,
	address = {United States -- California},
	type = {Ph.{D}.},
	title = {Distant ties: {Germany}, the {Ottoman} {Empire}, and the construction of the {Baghdad} {Railway}, 1903-1918},
